@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    // We will use the main application layout, not a separate one for Identity.
    Layout = "/Views/Shared/_Layout.cshtml"; 
}

<!-- Forms -->
<div class="relative z-10 min-h-[calc(100vh-200px)] flex items-center justify-center px-6">
    <div class="w-full max-w-md animate-slide-up">
        <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 shadow-2xl">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-full mb-4 animate-pulse-glow">
                    <!-- Icon for Login -->
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-white mb-2">Welcome Back</h2>
                <p class="text-gray-300">Continue your learning journey</p>
            </div>

            <!-- ASP.NET Validation Summary: This will display any form-wide errors -->
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-500/20 border border-red-500/50 rounded-2xl text-red-200 animate-shake" role="alert"></div>
            
            <!-- Login Form -->
            <form id="account" method="post" class="space-y-6">
                <div class="space-y-4">
                    <div class="group">
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.Email"
                               class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-indigo-500"
                               placeholder="Enter your email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-red-400 text-sm mt-1"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300 mb-2"></label>
                        <input asp-for="Input.Password"
                               class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-indigo-500"
                               placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-red-400 text-sm mt-1"></span>
                    </div>
                </div>
                <button id="login-submit" type="submit"
                        class="w-full py-4 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl text-white font-semibold text-lg hover:scale-105 transition">
                    Login
                </button>
            </form>

            <div class="mt-6 text-center text-gray-300">
                New to AgeWiseDigital?
                <!-- This link uses asp-page to correctly navigate to the Register page -->
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-400 hover:underline">Create an account</a>
            </div>
        </div>

        <div class="mt-8 text-center">
            <p class="text-gray-400 text-sm">
                By continuing, you agree to our <a href="#" class="text-indigo-400 hover:text-indigo-300">Terms of Service</a>.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}