@model SimpleLMS.Models.Topic
@{
    ViewData["Title"] = $"Add Topic to {ViewBag.CourseTitle}";
}

<div class="min-h-screen px-6 py-12">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-3xl font-bold text-white mb-2">Add Topic</h1>
                    <p class="text-gray-300">Add a new topic to "@ViewBag.CourseTitle"</p>
                </div>
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.CourseId" 
                   class="px-4 py-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-lg text-white hover:bg-white/20 transition-colors duration-300">
                    ‚Üê Back to Course
                </a>
            </div>
        </div>

        <!-- Create Form -->
        <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10">
            <form asp-action="Create" asp-route-courseId="@ViewBag.CourseId" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/20 rounded-lg p-4 text-red-400"></div>
                
                <!-- Basic Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label asp-for="Title" class="block text-sm font-medium text-gray-300">Topic Title</label>
                        <input asp-for="Title" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="Enter topic title" />
                        <span asp-validation-for="Title" class="text-red-400 text-sm"></span>
                    </div>
                    
                    <div class="space-y-2">
                        <label asp-for="Order" class="block text-sm font-medium text-gray-300">Topic Order</label>
                        <input asp-for="Order" type="number" min="1" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="1" />
                        <span asp-validation-for="Order" class="text-red-400 text-sm"></span>
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-300">Description</label>
                    <textarea asp-for="Description" rows="4" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="Enter topic description"></textarea>
                    <span asp-validation-for="Description" class="text-red-400 text-sm"></span>
                </div>

                <!-- Submit Button -->
                <div class="pt-6 border-t border-white/10">
                    <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300">
                        Create Topic
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 