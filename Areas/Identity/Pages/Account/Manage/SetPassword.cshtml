@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="space-y-6">
    <!-- Header -->
    <div class="border-b border-white/10 pb-6">
        <h2 class="text-2xl font-bold text-white mb-2">Set Password</h2>
        <p class="text-gray-300">Set a password for your local account</p>
    </div>

    <!-- Status Message -->
    <partial name="_StatusMessage" for="StatusMessage" />

    <!-- Set Password Form -->
    <form method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/20 rounded-lg p-4 text-red-400" role="alert"></div>
        
        <!-- New Password -->
        <div class="space-y-2">
            <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-300">New Password</label>
            <div class="relative">
                <input asp-for="Input.NewPassword" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="Enter your new password" />
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                </div>
            </div>
            <span asp-validation-for="Input.NewPassword" class="text-red-400 text-sm"></span>
        </div>

        <!-- Confirm New Password -->
        <div class="space-y-2">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300">Confirm New Password</label>
            <div class="relative">
                <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="Confirm your new password" />
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                </div>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span>
        </div>

        <!-- Set Password Button -->
        <div class="pt-6 border-t border-white/10">
            <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Set Password
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
