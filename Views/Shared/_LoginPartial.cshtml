@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div class="flex items-center space-x-4">
@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Dashboard" asp-action="Index" class="text-gray-300 hover:text-white transition-colors duration-300 font-medium">Dashboard</a>
    <a class="text-gray-300 hover:text-white transition-colors duration-300" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="px-4 py-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-full text-white font-semibold hover:bg-white/20 transform hover:scale-105 transition-all duration-300">Logout</button>
    </form>
}
else
{
    <a class="text-gray-300 hover:text-white transition-colors duration-300" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-full text-white font-semibold shadow-lg hover:shadow-purple-500/25 transform hover:scale-105 transition-all duration-300" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</div>