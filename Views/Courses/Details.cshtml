@model SimpleLMS.Models.Course

@{
    ViewData["Title"] = Model.Title;
    var isEnrolled = ViewBag.IsEnrolled ?? false;
}

<div class="min-h-screen px-6 py-12">
    <div class="max-w-6xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <a asp-action="Index" class="text-indigo-400 hover:text-indigo-300 transition-colors duration-300">
                ‚Üê Back to Courses
            </a>
        </nav>

        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Course Header -->
                <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10 mb-8">
                    <div class="flex items-start justify-between mb-6">
                        <div class="flex-1">
                            <h1 class="text-4xl md:text-5xl font-black mb-4">
                                <span class="bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
                                    @Model.Title
                                </span>
                            </h1>
                            <p class="text-xl text-gray-300 leading-relaxed">
                                @Model.Description
                            </p>
                        </div>
                        <div class="ml-6">
                            <span class="px-4 py-2 bg-indigo-500/80 backdrop-blur-sm text-white font-semibold rounded-full">
                                @Model.Level
                            </span>
                        </div>
                    </div>

                    <!-- Course Image -->
                    <div class="relative mb-6">
                        <div class="w-full h-64 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-xl flex items-center justify-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-full object-cover rounded-xl">
                            }
                            else
                            {
                                <svg class="w-24 h-24 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            }
                        </div>
                    </div>

                    <!-- Course Details -->
                    <div class="grid md:grid-cols-3 gap-6">
                        <div class="flex items-center space-x-3">
                            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-400">Instructor</p>
                                <p class="text-white font-semibold">@Model.Instructor</p>
                            </div>
                        </div>

                        <div class="flex items-center space-x-3">
                            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-400">Duration</p>
                                <p class="text-white font-semibold">@Model.Duration hours</p>
                            </div>
                        </div>

                        <div class="flex items-center space-x-3">
                            <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-indigo-500 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-gray-400">Content Type</p>
                                <p class="text-white font-semibold">@Model.ContentType</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (isEnrolled)
                {
                    <!-- Course Content for Enrolled Users -->
                    <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10 mb-8">
                        <h2 class="text-2xl font-bold text-white mb-6">Course Content</h2>
                        
                        @switch (Model.ContentType)
                        {
                            case ContentType.Text:
                                <div class="prose prose-invert max-w-none">
                                    <div class="bg-white/5 rounded-lg p-6">
                                        @Html.Raw(Markdig.Markdown.ToHtml(Model.Content))
                                    </div>
                                </div>
                                break;
                                
                            case ContentType.Video:
                                <div class="aspect-video bg-black rounded-lg overflow-hidden">
                                    <iframe src="@Model.VideoUrl" 
                                            class="w-full h-full" 
                                            frameborder="0" 
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                            allowfullscreen>
                                    </iframe>
                                </div>
                                break;
                                
                            case ContentType.Pdf:
                                <div class="bg-white/5 rounded-lg p-6">
                                    <div class="flex items-center space-x-3 mb-4">
                                        <svg class="w-8 h-8 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                                        </svg>
                                        <span class="text-white font-semibold">PDF Document</span>
                                    </div>
                                    <a href="@Model.PdfFilePath" 
                                       class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                        </svg>
                                        Download PDF
                                    </a>
                                </div>
                                break;
                        }
                        
                        <!-- Complete Course Button -->
                        <div class="mt-8 pt-6 border-t border-white/10">
                            <form asp-action="Complete" asp-route-id="@Model.Id" method="post">
                                <button type="submit" 
                                        class="w-full px-6 py-4 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-lg hover:from-green-700 hover:to-emerald-700 transform hover:scale-105 transition-all duration-300">
                                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Mark as Complete
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Course Topics -->
                    @if (Model.Topics.Any())
                    {
                        <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10 mb-8">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-2xl font-bold text-white">Course Topics</h2>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Topic" asp-action="Create" asp-route-courseId="@Model.Id" 
                                       class="px-4 py-2 bg-indigo-500/20 text-indigo-400 rounded-lg hover:bg-indigo-500/30 transition-colors duration-300">
                                        + Add Topic
                                    </a>
                                }
                            </div>
                            
                            <div class="space-y-6">
                                @foreach (var topic in Model.Topics)
                                {
                                    <div class="bg-white/5 rounded-xl p-6 border border-white/10 hover:border-indigo-500/30 transition-all duration-300">
                                        <div class="flex items-start justify-between mb-4">
                                            <div class="flex-1">
                                                <div class="flex items-center space-x-3 mb-2">
                                                    <span class="px-3 py-1 bg-indigo-500/20 text-indigo-400 text-sm font-medium rounded-full">
                                                        Topic @topic.Order
                                                    </span>
                                                </div>
                                                <h3 class="text-xl font-semibold text-white mb-2">@topic.Title</h3>
                                                <p class="text-gray-300 text-sm">@topic.Description</p>
                                            </div>
                                            
                                            <div class="flex space-x-2">
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-controller="Topic" asp-action="Edit" asp-route-id="@topic.Id" 
                                                       class="px-4 py-2 bg-yellow-500/20 text-yellow-400 rounded-lg hover:bg-yellow-500/30 transition-colors duration-300">
                                                        Edit
                                                    </a>
                                                    <a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.Id" 
                                                       class="px-4 py-2 bg-red-500/20 text-red-400 rounded-lg hover:bg-red-500/30 transition-colors duration-300">
                                                        Delete
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                        
                                        <!-- Content Items -->
                                        @if (topic.ContentItems.Any())
                                        {
                                            <div class="space-y-3">
                                                <h4 class="text-lg font-medium text-white mb-3">Content Items</h4>
                                                @foreach (var contentItem in topic.ContentItems.OrderBy(c => c.Order))
                                                {
                                                    <div class="bg-white/5 rounded-lg p-4 border border-white/10">
                                                        <div class="flex items-center justify-between">
                                                            <div class="flex-1">
                                                                <div class="flex items-center space-x-3 mb-2">
                                                                    <span class="px-2 py-1 bg-purple-500/20 text-purple-400 text-xs font-medium rounded-full">
                                                                        @contentItem.ContentType
                                                                    </span>
                                                                    <span class="text-gray-400 text-xs">Item @contentItem.Order</span>
                                                                </div>
                                                                <h5 class="text-white font-medium mb-1">@contentItem.Title</h5>
                                                                <p class="text-gray-400 text-sm">@contentItem.Description</p>
                                                            </div>
                                                            
                                                            <div class="flex space-x-2">
                                                                <a asp-controller="ContentItem" asp-action="Learn" asp-route-id="@contentItem.Id" 
                                                                   class="px-3 py-2 bg-indigo-500/20 text-indigo-400 rounded-lg hover:bg-indigo-500/30 transition-colors duration-300 text-sm">
                                                                    Learn
                                                                </a>
                                                                @if (User.IsInRole("Admin"))
                                                                {
                                                                    <a asp-controller="ContentItem" asp-action="Edit" asp-route-id="@contentItem.Id" 
                                                                       class="px-3 py-2 bg-yellow-500/20 text-yellow-400 rounded-lg hover:bg-yellow-500/30 transition-colors duration-300 text-sm">
                                                                        Edit
                                                                    </a>
                                                                    <a asp-controller="ContentItem" asp-action="Delete" asp-route-id="@contentItem.Id" 
                                                                       class="px-3 py-2 bg-red-500/20 text-red-400 rounded-lg hover:bg-red-500/30 transition-colors duration-300 text-sm">
                                                                        Delete
                                                                    </a>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-6">
                                                <div class="w-12 h-12 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
                                                    <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                                    </svg>
                                                </div>
                                                <p class="text-gray-400 text-sm mb-3">No content items yet</p>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-controller="ContentItem" asp-action="Create" asp-route-topicId="@topic.Id" 
                                                       class="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-300 text-sm">
                                                        Add Content Item
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10 mb-8">
                            <div class="text-center">
                                <div class="w-16 h-16 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-white mb-2">No Topics Yet</h3>
                                <p class="text-gray-400 mb-4">This course doesn't have any topics yet.</p>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Topic" asp-action="Create" asp-route-courseId="@Model.Id" 
                                       class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300">
                                        Add First Topic
                                    </a>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Course Content Preview -->
                    <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-8 border border-white/10">
                        <h2 class="text-2xl font-bold text-white mb-6">Course Preview</h2>
                        <div class="space-y-4">
                            <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-lg">
                                <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-sm">1</span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-white font-semibold">Introduction to @Model.Title</h3>
                                    <p class="text-gray-400 text-sm">Get started with the fundamentals</p>
                                </div>
                                <span class="text-green-400 text-sm">Free</span>
                            </div>

                            <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-lg">
                                <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-sm">2</span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-white font-semibold">Core Concepts</h3>
                                    <p class="text-gray-400 text-sm">Learn the essential principles</p>
                                </div>
                                <span class="text-green-400 text-sm">Free</span>
                            </div>

                            <div class="flex items-center space-x-4 p-4 bg-white/5 rounded-lg">
                                <div class="w-8 h-8 bg-pink-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-sm">3</span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-white font-semibold">Advanced Techniques</h3>
                                    <p class="text-gray-400 text-sm">Master advanced concepts</p>
                                </div>
                                <span class="text-green-400 text-sm">Free</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-6 border border-white/10 sticky top-6">
                    <div class="text-center mb-6">
                        <div class="text-3xl font-bold text-white mb-2">
                            @if (Model.Price == 0)
                            {
                                <span class="text-green-400">Free</span>
                            }
                            else
                            {
                                <span>$@Model.Price</span>
                            }
                        </div>
                        <p class="text-gray-400 text-sm">One-time enrollment</p>
                    </div>

                    <div class="space-y-4 mb-6">
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Full lifetime access</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Certificate of completion</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Downloadable resources</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-300">Mobile and TV access</span>
                        </div>
                    </div>

                    @if (isEnrolled)
                    {
                        <a asp-action="Learn" asp-route-id="@Model.Id" 
                           class="w-full px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 mb-4 block text-center">
                            Continue Learning
                        </a>
                    }
                    else
                    {
                        <form asp-action="Enroll" asp-route-id="@Model.Id" method="post">
                            <button type="submit" 
                                    class="w-full px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 mb-4">
                                Enroll Now
                            </button>
                        </form>
                    }

                    <div class="text-center">
                        <p class="text-gray-400 text-sm">30-Day Money-Back Guarantee</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 