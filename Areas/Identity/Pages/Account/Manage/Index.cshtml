@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="space-y-6">
    <!-- Header -->
    <div class="border-b border-white/10 pb-6">
        <h2 class="text-2xl font-bold text-white mb-2">Profile Information</h2>
        <p class="text-gray-300">Update your account profile and contact information</p>
    </div>

    <!-- Status Message -->
    <partial name="_StatusMessage" for="StatusMessage" />

    <!-- Profile Form -->
    <form id="profile-form" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/20 rounded-lg p-4 text-red-400" role="alert"></div>
        
        <!-- Username Field -->
        <div class="space-y-2">
            <label asp-for="Username" class="block text-sm font-medium text-gray-300">Username</label>
            <div class="relative">
                <input asp-for="Username" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent disabled:opacity-50 disabled:cursor-not-allowed" placeholder="Username" disabled />
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
            </div>
            <p class="text-sm text-gray-400">Your username cannot be changed</p>
        </div>

        <!-- Phone Number Field -->
        <div class="space-y-2">
            <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-300">Phone Number</label>
            <div class="relative">
                <input asp-for="Input.PhoneNumber" class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" placeholder="Enter your phone number" />
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
            </div>
            <span asp-validation-for="Input.PhoneNumber" class="text-red-400 text-sm"></span>
        </div>

        <!-- Save Button -->
        <div class="pt-6 border-t border-white/10">
            <button id="update-profile-button" type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
